{
  "name": "react-shimmer",
  "version": "3.1.3",
  "description": "React Image (Suspense-like) Loader component that simulates a shimmer effect",
  "author": "gokcan",
  "keywords": [
    "react",
    "reactjs",
    "suspense",
    "react-suspense",
    "react-image",
    "loader",
    "loading-indicator",
    "shimmer",
    "activity-indicator",
    "placeholder",
    "spinner"
  ],
  "repository": "gokcan/react-shimmer",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
