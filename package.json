  },
  "devDependencies": {
    "@types/prop-types": "^15.7.4",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "husky": "^7.0.1",
    "postcss": "^8.3.6",
    "react": "^17.0.2",
